@model IEnumerable<ProjectTrash.Models.AccountSubscription>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Account)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsSuspended)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountEndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SuspensionStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SuspensionEndDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Account.AccountID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsSuspended)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountEndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SuspensionStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SuspensionEndDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AccountSubscritionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AccountSubscritionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AccountSubscritionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
